<main class="container my-5">
      <div class="row row-cols-1 row-cols-md-1 row-cols-sm-1 justify-content-center">
        
        <div class="col mb-10" >
            <div class="card" >
                <div class="card-body bg-warning">
                    <h5 class="card-title text-danger">New Post</h5>
                </div>
                <ul class="list-group list-group-flush text text-light"> 
                    <form class="post-form">
                        <li class="list-group-item bg-secondary">                       
                            <div>
                                <label for="user">Title</label>
                            </div>
                        </li>
                        <li class="list-group-item bg-secondary">                       
                            <div>
                                <input class="w-100" type="text" id="title" />
                            </div>
                        </li>
                        <li class="list-group-item bg-secondary">                       
                            <div>
                                <label >Content</label>
                            </div>
                        </li>
                        <li class="list-group-item bg-secondary">                       
                            <div>
                                <textarea class="w-100" name="" id="content" cols="30" rows="3"></textarea>
                            </div>
                        </li>
                        <li class="list-group-item bg-secondary">                       
                            <div>
                                <button class="btn btn-warning" type="submit" attr="{{user_id}}" id="newPost">Create Post</button>
                            </div>
                        </li>
                    </form>
                </ul>
            </div>
        </div>

      </div>
</main>
    <script src="/assets/js/newPost.js"></script>